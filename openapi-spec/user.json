{
  "paths": {
    "/v1/user": {
      "get": {
        "tags": ["User"],
        "summary": "Get authenticated user",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "include",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["teams"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User information",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "integer" },
                    "name": { "type": "string" },
                    "screen_name": { "type": "string" },
                    "created_at": {
                      "type": "string",
                      "format": "date-time"
                    },
                    "updated_at": {
                      "type": "string",
                      "format": "date-time"
                    },
                    "icon": {
                      "type": "string",
                      "format": "uri"
                    },
                    "email": {
                      "type": "string",
                      "format": "email"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "content": {
              "$ref": "./openapi.json#/components/schemas/ErrorResponseBody"
            }
          },
          "401": {
            "content": {
              "$ref": "./openapi.json#/components/schemas/ErrorResponseBody"
            }
          },
          "404": {
            "content": {
              "$ref": "./openapi.json#/components/schemas/ErrorResponseBody"
            }
          },
          "409": {
            "content": {
              "$ref": "./openapi.json#/components/schemas/ErrorResponseBody"
            }
          },
          "429": {
            "content": {
              "$ref": "./openapi.json#/components/schemas/ErrorResponseBody"
            }
          }
        }
      }
    }
  }
}
